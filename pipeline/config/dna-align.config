manifest {
    name = 'call-dna-align-nf'
    author = 'Benjamin Carlin'
    description = 'A template for Nextflow pipelines'
    version = 'Version Number'
}

params {
    input_csv = "path/to/input/csv/"
    reference_fasta = "/path/to/fasta/"
    reference_fasta_dict = "/path/to/fasta/dict"
    reference_fasta_index_files = "/path/to/fasta/index/files"
    output_dir = "where/to/save/outputs/"
    temp_dir = "java/temp/file/dir/"
    save_intermediate_files = false
}

process {
    cache = true
    executor = "slurm"
    queue = "slurm partition type"
}

docker {
    enabled = true
}
